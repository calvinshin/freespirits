<form action="/confirmation-profile" method="post" class="create">
    <h3>Your Profile</h3>
    <br>
    First name: 
    <br>
    <input type="text" name="fname" placeholder="First name">
    <br>
    Last name: 
    <br>
    <input type="text" name="lname" placeholder="Last name">
    <br>
    Photo: 
    <br>
    <input type="url" name="picture" placeholder="http://yourphoto.com">
    <br>
    Gender: 
    <br>
    <input type="text" name="gender" placeholder="gender">
    <br>
    Primary Language Spoken: 
    <br>
    <input type="text" name="primary_language" placeholder="primary language">
    <br>
    Travel Philosophy: 
    <br>
    <textarea name="travel_philosophy" rows="5" cols="30">
        What do you want learn/experience through travel?
    </textarea>
    <br>
    About me: 
    <br>
    <textarea name="description" rows="5" cols="30">
        Likes/dislikes/additional language spoken
    </textarea>
    <br>
    email: 
    <br>
    <input type="email" name="email" placeholder="email@email.com">
    <br>
    <button type="submit" class="create-profile">Create My Profile!</button>
</form>

