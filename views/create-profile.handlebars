<form action="/confirmation-profile" method="post">
    First name: 
    <br>
    <input type="text" name="fname" value="First name">
    <br>
    Last name: 
    <br>
    <input type="text" name="lname" value="Last name">
    <br>
    Photo: 
    <br>
    <input type="url" name="picture" value="http://yourphoto.com">
    <br>
    Gender: 
    <br>
    <input type="text" name="gender" value="gender">
    <br>
    Primary Language Spoken: 
    <br>
    <input type="text" name="primary_language" value="primary language">
    <br>
    Travel Philosophy: 
    <br>
    <textarea name="travel_philosophy" rows="5" cols="30">
        What do you want learn/experience through travel?
    </textarea>
    <br>
    About me: 
    <br>
    <textarea name="description" rows="5" cols="30">
        Likes/dislikes/additional language spoken
    </textarea>
    <br>
    email: 
    <br>
    <input type="email" name="email" value="email@email.com">
    <br>
    <button type="submit" class="create-profile">Create My Profile!</button>
</form>